{
  "framework": "nextjs",
  "redirects": [
    {
      "source": "/blog",
      "destination": "/travel-guides",
      "permanent": true
    },
    {
      "source": "/blog/:path*",
      "destination": "/travel-guides/:path*",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "destination": "https://toptours.ai/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "blog.toptours.ai"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}
